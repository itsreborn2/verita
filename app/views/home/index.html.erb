      // 이미지 비교 기능 설정 함수
      function setupImageComparison(containerId, overlayId, dividerId, afterImageId, beforeImageSrc) {
        const container = document.getElementById(containerId);
        const overlay = document.getElementById(overlayId);
        const divider = document.getElementById(dividerId);
        const afterImage = document.getElementById(afterImageId);
        
        if (!container || !overlay || !divider || !afterImage) {
          console.error(`Required elements not found for ${containerId}`);
          return;
        }
        
        // 초기 설정 - 50% 분할로 시작
        function initializeComparison() {
          const rect = container.getBoundingClientRect();
          overlay.style.backgroundImage = `url(${beforeImageSrc})`;
          overlay.style.backgroundPosition = '0 0';
          overlay.style.backgroundSize = `${rect.width}px ${rect.height}px`;
          overlay.style.backgroundRepeat = 'no-repeat';
          console.log(`Initialized ${containerId} with 50% split`);
        }
        
        // 이미지 로드 후 초기화
        afterImage.addEventListener('load', initializeComparison);
        if (afterImage.complete) {
          initializeComparison();
        }
        
        // 마우스 진입 - 이미 표시되어 있으므로 추가 효과만
        container.addEventListener('mouseenter', function() {
          console.log(`Mouse entered ${containerId}`);
          divider.style.transform = 'scaleY(1.02)';
          divider.style.transition = 'transform 0.2s ease';
        });
        
        // 마우스 이동 - 세로 분할
        container.addEventListener('mousemove', function(event) {
          const rect = container.getBoundingClientRect();
          const x = event.clientX - rect.left;
          
          // 마우스 X 좌표를 퍼센트로 변환 (0% ~ 100%)
          const percentage = Math.max(0, Math.min(100, (x / rect.width) * 100));
          
          // 오버레이 너비를 마우스 위치에 따라 조정
          overlay.style.width = percentage + '%';
          
          // 분할선 위치 조정
          divider.style.left = percentage + '%';
          
          // 배경 이미지 설정 (번역 전 이미지)
          overlay.style.backgroundImage = `url(${beforeImageSrc})`;
          overlay.style.backgroundPosition = '0 0';
          overlay.style.backgroundSize = `${rect.width}px ${rect.height}px`;
          overlay.style.backgroundRepeat = 'no-repeat';
        });
        
        // 마우스 이탈 - 50%로 복귀
        container.addEventListener('mouseleave', function() {
          console.log(`Mouse left ${containerId} - returning to 50% split`);
          overlay.style.width = '50%';
          divider.style.left = '50%';
          divider.style.transform = 'scaleY(1)';
        });
        
        // 윈도우 리사이즈 시 재초기화
        window.addEventListener('resize', function() {
          initializeComparison();
        });
      }
