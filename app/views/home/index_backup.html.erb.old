<!-- JavaScript for Interactive Features -->
<script>
  // FAQ Toggle Function
  function toggleFaq(index) {
    const answer = document.getElementById(`faq-answer-${index}`);
    const icon = document.getElementById(`faq-icon-${index}`);
    
    if (answer.classList.contains('hidden')) {
      answer.classList.remove('hidden');
      icon.textContent = '−';
    } else {
      answer.classList.add('hidden');
      icon.textContent = '+';
    }
  }
  
  // Demo Translation Function
  document.getElementById('demo-translate-btn').addEventListener('click', async function() {
    const inputText = document.getElementById('demo-input').value.trim();
    const outputDiv = document.getElementById('demo-output');
    const button = this;
    
    if (!inputText) {
      alert('번역할 텍스트를 입력해주세요.');
      return;
    }
    
    // Loading state
    button.disabled = true;
    button.innerHTML = '⏳ 번역 중...';
    outputDiv.innerHTML = '<div class="animate-pulse">AI가 번역하고 있습니다...</div>';
    
    try {
      const response = await fetch('/demo_translate', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
        },
        body: JSON.stringify({ text: inputText })
      });
      
      const data = await response.json();
      
      if (response.ok) {
        outputDiv.innerHTML = `
          <div class="text-gray-800">${data.translated}</div>
          <div class="text-sm text-yellow-600 mt-2">${data.message}</div>
        `;
      } else {
        outputDiv.innerHTML = `<div class="text-red-500">${data.error}</div>`;
      }
    } catch (error) {
      outputDiv.innerHTML = '<div class="text-red-500">번역 중 오류가 발생했습니다.</div>';
    } finally {
      // Reset button
      button.disabled = false;
      button.innerHTML = '⚡ 번역하기';
    }
  });
  
  // Smooth scrolling for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
</script>
