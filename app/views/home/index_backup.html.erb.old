<script>
  // FAQ Toggle Function
  function toggleFaq(index) {
    const answer = document.getElementById(`faq-answer-${index}`);
    const icon = document.getElementById(`faq-icon-${index}`);
    
    if (answer.classList.contains('hidden')) {
      answer.classList.remove('hidden');
      icon.textContent = 'âˆ’';
    } else {
      answer.classList.add('hidden');
      icon.textContent = '+';
    }
  }
  
  // Demo Translation Function
  document.getElementById('demo-translate-btn').addEventListener('click', async function() {
    const inputText = document.getElementById('demo-input').value.trim();
    const outputDiv = document.getElementById('demo-output');
    const button = this;
    
    if (!inputText) {
      alert('ë²ˆì—­í•  í…ìŠ¤íŠ¸ë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”.');
      return;
    }
    
    // Loading state
    button.disabled = true;
    button.innerHTML = 'â³ ë²ˆì—­ ì¤‘...';
    outputDiv.innerHTML = '<div class="animate-pulse">AIê°€ ë²ˆì—­í•˜ê³  ìˆìŠµë‹ˆë‹¤...</div>';
    
    try {
      const response = await fetch('/demo_translate', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
        },
        body: JSON.stringify({ text: inputText })
      });
      
      const data = await response.json();
      
      if (response.ok) {
        outputDiv.innerHTML = `
          <div class="text-gray-800">${data.translated}</div>
          <div class="text-sm text-yellow-600 mt-2">${data.message}</div>
        `;
      } else {
        outputDiv.innerHTML = `<div class="text-red-500">${data.error}</div>`;
      }
    } catch (error) {
      outputDiv.innerHTML = '<div class="text-red-500">ë²ˆì—­ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.</div>';
    } finally {
      // Reset button
      button.disabled = false;
      button.innerHTML = 'âš¡ ë²ˆì—­í•˜ê¸°';
    }
  });
  
  // Smooth scrolling for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
</script>
